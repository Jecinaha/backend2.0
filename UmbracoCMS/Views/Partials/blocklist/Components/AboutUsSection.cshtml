@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.AboutUsSection)Model.Content;
}

<section class="about-us-section">
    <div class="about-us-container">
        <div class="about-us-grid">

            <div class="about-us-image-wrapper">
                @if (content.AboutUsImage != null)
                {
                    <img src="@content.AboutUsImage.Url()" alt="@content.AboutUsImage.Name" class="about-us-image" />
                }
                <h2 class="about-us-title">@content.AboutUsTitle</h2>
            </div>

            <div class="about-us-text">
                @Html.Raw(content.AboutUsText)
            </div>

        </div>
    </div>
</section>
