@model UmbracoCMS.ViewModels.QuestionFormViewModel

@using (Html.BeginUmbracoForm("HandleQuestionForm", "Form", FormMethod.Post, new { novalidate = "novalidate", id = "questionsForm" }))
{
    <div class="questions-form">

        <div class="form-row">
            <div class="form-group half">
                <input asp-for="QuestionName" class="form-input" placeholder="Name" />
                <span asp-validation-for="QuestionName"></span>
            </div>

            <div class="form-group half">
                <input asp-for="QuestionEmail" class="form-input" placeholder="Email" />
                <span asp-validation-for="QuestionEmail"></span>
            </div>
        </div>

        <div class="form-group full">
            <textarea asp-for="QuestionText" rows="5" class="form-input" placeholder="Question"></textarea>
            <span asp-validation-for="QuestionText"></span>
        </div>

        <button type="submit" class="btn">Submit</button>
    </div>
}
