@using UmbracoCMS.ViewModels
@model CallbackFormViewModel

@using (Html.BeginUmbracoForm("handleCallbackForm", "Form", FormMethod.Post, new { novalidate = "novalidate", id = "callbackForm" }))

{
    <div class="form-wrapper">

        <div class="form-group">
            <label asp-for="Name" class="sr-only"></label>
            <input asp-for="Name" type="text" placeholder="@Html.DisplayNameFor(x => x.Name)" class="form-input" />
            <span asp-validation-for="Name"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="sr-only"></label>
            <input asp-for="Email" type="text" placeholder="@Html.DisplayNameFor(x => x.Email)" class="form-input" />
            <span asp-validation-for="Email"></span>
        </div>

        <div class="form-group">
            <label asp-for="Phone" class="sr-only"></label>
            <input asp-for="Phone" type="text" placeholder="@Html.DisplayNameFor(x => x.Phone)" class="form-input" />
            <span asp-validation-for="Phone"></span>
        </div>

        <div class="form-group relative">
            <label asp-for="SelectedOption" class="sr-only"></label>
            <div class="select-wrapper">
                <select asp-for="SelectedOption" class="form-select">
                    <option value="" disabled hidden selected>Please select an option</option>
              
                    @foreach (var o in Model.Options)
                    {
                        <option value="@o">@o</option>
                    }


                </select>
            </div>
            <span asp-validation-for="SelectedOption"></span>
        </div>

        <div class="btn">
            <button type="submit">Submit</button>
        </div>

    </div>

}